@{
    ViewData["Title"] = "Quad View";
}

@model List<TaskForm>

<div class="container">
    <div class="row">
        @* filler row *@
    </div>
    @* Title *@
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10 border border-dark"><h1> Stephen Covey's Time Management Matrix</h1></div>
        <div class="col-1"></div>
    </div>
    @* Column names  *@
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2 border border-dark"></div>
        <div class="col-4 border border-dark"><h2>Urgent</h2></div>
        <div class="col-4 border border-dark"><h2>Not Urgent</h2></div>
        <div class="col-1"></div>
    </div>
    @* Important Row*@
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2 border border-dark"><h2> Important</h2></div>
        <div class="col-4 border border-dark">
            @*Here, the code will sort through the TaskName in the Model when ready*@
            @foreach (var x in Model)
            {
                if (@x.Urgent == true & @x.Important == true)
                {
                    <ul>
                        <li>
                            @x.TaskName - 
                            <a asp-controller="Home" asp-action="Edit" asp-route-TaskID="@x.TaskID">Edit</a>
                            |
                            <a asp-controller="Home" asp-action="Delete" asp-route-TaskID="@x.TaskID">Delete</a>
                        </li>
                        
                    </ul>
                }
            }
        </div>
        <div class="col-4 border border-dark">
            @foreach (var x in Model)
            {
                if (@x.Urgent == false & @x.Important == true)
                {
                    <ul>
                        <li>
                            @x.TaskName -
                            <a asp-controller="Home" asp-action="Edit" asp-route-TaskID="@x.TaskID">Edit</a>
                            |
                            <a asp-controller="Home" asp-action="Delete" asp-route-TaskID="@x.TaskID">Delete</a>
                        </li>
                    </ul>
                }
            }
        </div>
        <div class="col-1"></div>
    </div>
    @* Not Important Row   *@
    <div class="row ">
        <div class="col-1"></div>
        <div class="col-2 border border-dark"><h2> Not Important</h2></div>
        <div class="col-4 border border-dark">
            @foreach (var x in Model)
            {
                if (@x.Urgent == true & @x.Important == false)
                {
                    <ul>
                        <li>
                            @x.TaskName -
                            <a asp-controller="Home" asp-action="Edit" asp-route-TaskID="@x.TaskID">Edit</a>
                            |
                            <a asp-controller="Home" asp-action="Delete" asp-route-TaskID="@x.TaskID">Delete</a>
                        </li>
                    </ul>
                }
            }
        </div>
        <div class="col-4 border border-dark">
            @foreach (var x in Model)
            {
                if (@x.Urgent == false & @x.Important == false)
                {
                    <ul>
                        <li>
                            @x.TaskName -
                            <a asp-controller="Home" asp-action="Edit" asp-route-TaskID="@x.TaskID">Edit</a>
                            |
                            <a asp-controller="Home" asp-action="Delete" asp-route-TaskID="@x.TaskID">Delete</a>
                        </li>
                    </ul>
                }
            }
        </div>
        <div class="col-1"></div>
    </div>

</div>
